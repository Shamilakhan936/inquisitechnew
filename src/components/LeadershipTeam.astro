---
import member1 from "../../public/Images/karian.png";
import member2 from "../../public/Images/roland.png";
import member3 from "../../public/Images/man.png";
import member4 from "../../public/Images/sara.png";
import member5 from "../../public/Images/sumit.png";
import member6 from "../../public/Images/ana.png";

const team = [
  {
    name: "Sarah Johnson",
    role: "CEO, TechVision",
    image: member1,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
  {
    name: "Michael Chen",
    role: "COO, TechVision",
    image: member2,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
  {
    name: "David Smith",
    role: "CTO, TechVision",
    image: member3,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
  {
    name: "Emily Davis",
    role: "CFO, TechVision",
    image: member4,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
  {
    name: "James Wilson",
    role: "CMO, TechVision",
    image: member5,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
  {
    name: "Olivia Brown",
    role: "Head of Strategy, TechVision",
    image: member6,
    text: "To empower organizations with the data insights they need to make confident, strategic decisions that drive sustainable growth and competitive advantage.",
  },
];
---

<section class="py-16 container-xl text-center">
  <h2 class="text-3xl md:text-4xl font-bold mb-3">
    Meet Our Leadership Team
  </h2>
  <p class="text-gray-600 font-inter max-w-2xl mx-auto mb-12">
    Industry Veterans With Decades Of Combined Experience In Data Analytics,
    Business Intelligence, And Strategic Consulting.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-y-[39px] gap-x-[56px] ">
    {team.map((member) => (
      <div class="text-center">
        <img
          src={member.image.src}
          alt={member.name}
          class="w-40 h-40 mx-auto rounded-full object-cover mb-4"
        />
        <h3 class="text-[20px] font-medium font-poppins">{member.name}</h3>
        <p class="text-[10px] font-inter text-[#000000]">{member.role}</p>
        <p class="text-[#4B5563] text-[16px] my-[16px] font-inter">{member.text}</p>

        <div class="flex justify-center gap-4 text-gray-500">
          {/* <!-- LinkedIn --> */}
          <a href="#" class="text-[#0A66C2]" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.11 1 2.5 1s2.48 1.12 2.48 2.5zM0 8h5v16H0V8zm8 0h4.7v2.2h.1c.65-1.2 2.24-2.5 4.6-2.5 4.9 0 5.8 3.2 5.8 7.4V24h-5v-7.5c0-1.8 0-4-2.4-4s-2.7 1.9-2.7 3.9V24H8V8z"/>
            </svg>
          </a>
          {/* <!-- Twitter --> */}
          <a href="#" class="text-[#0A66C2]" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53A4.48 4.48 0 0 0 22.4.36a9.06 9.06 0 0 1-2.86 1.1A4.52 4.52 0 0 0 16.5 0c-2.63 0-4.76 2.13-4.76 4.76 0 .37.04.73.12 1.07C7.73 5.66 4.1 3.76 1.67.9a4.72 4.72 0 0 0-.64 2.39c0 1.65.84 3.1 2.12 3.95a4.51 4.51 0 0 1-2.15-.6v.06c0 2.3 1.63 4.22 3.8 4.66a4.67 4.67 0 0 1-2.14.08c.6 1.87 2.32 3.23 4.37 3.27A9.05 9.05 0 0 1 0 19.54a12.79 12.79 0 0 0 6.92 2.03c8.3 0 12.84-6.88 12.84-12.84 0-.2 0-.39-.01-.58A9.06 9.06 0 0 0 23 3z"/>
            </svg>
          </a>
          {/* <!-- Facebook --> */}
          <a href="#" class="text-[#0A66C2]" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.675 0h-21.35C.596 0 0 .596 0 1.326v21.348C0 23.404.596 24 1.326 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.894-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24h-1.918c-1.506 0-1.797.717-1.797 1.767v2.315h3.592l-.468 3.622h-3.124V24h6.127C23.404 24 24 23.404 24 22.674V1.326C24 .596 23.404 0 22.675 0z"/>
            </svg>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
