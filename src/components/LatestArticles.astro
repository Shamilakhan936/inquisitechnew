---

<section class="container-xl">
  <h2 class="font-sans-serif text-3xl font-bold text-center mb-12 mt-16">
    Latest Articles
  </h2>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto mb-16"
  >
    {
      articles.map((article, index) => (
        <div class="bg-white w-[400px] relative shadow-md overflow-hidden border border-gray-200 transition hover:shadow-lg">
          <h4 class=" absolute left-6 top-6 px-4 py-2 bg-white rounded-lg text-[14px] m-0 font-inter">
            {article.imgtitle}
          </h4>
          <img
            src={article.image.src}
            alt={`Article ${index + 1}`}
            class="w-full h-56 object-cover"
          />

          <div class="px-6 pt-6 pb-20 flex flex-col justify-between w-full">
            <h3 class="font-bold text-lg mb-2 leading-snug">
              {article.title} <br />
              {article.subtitle}
            </h3>

            <p class="text-sm text-gray-600 mb-4">{article.description}</p>

            <div class="flex justify-between items-center mt-auto w-full my-6">
              <div class="flex items-center gap-3">
                <img
                  src={article.authorImage.src}
                  alt="Author"
                  class="w-[47.99px] h-[47.99px] rounded-full"
                />
                <div>
                  <p class="text-sm font-inter">{article.authorName}</p>
                  <p class="text-xs text-black">{article.authorTitle}</p>
                </div>
              </div>
              <a
                href="#"
