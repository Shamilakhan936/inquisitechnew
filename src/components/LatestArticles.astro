---
import img1 from "../../public/Images/blog1.png";
import img2 from "../../public/Images/blog2.png";
import img3 from "../../public/Images/blog3.png";
import img4 from "../../public/Images/blog4.png";
import img5 from "../../public/Images/blog5.png";
import authorImg from "../../public/Images/frank.png";

const articles = [img1, img2, img3, img4, img5];
---

<section class="container-xl">
  <h2 class="font-sans-serif text-3xl font-bold text-center mb-12 mt-16">Latest Articles</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto mb-16">
    {articles.map((image, index) => (
      <div class="bg-white w-[400px] rounded-lg shadow-md overflow-hidden border border-gray-200 transition hover:shadow-lg">
        <!-- Image -->
        <img src={image.src} alt={`Article ${index + 1}`} class="w-full h-48 object-cover" />

        <!-- Content -->
        <div class="p-5 flex flex-col justify-between w-full">
          <h3 class="font-bold text-lg mb-2 leading-snug">
            The Future Of Business Intelligence <br />
            AI-Powered Analytics
          </h3>

          <p class="text-sm text-gray-600 mb-4">
            Learn the essential strategies and technologies for building scalable, efficient
            data warehouses that drive business success.
          </p>

          <!-- Footer -->
          <div class="flex justify-between items-center mt-auto w-full my-6">
            <div class="flex items-center gap-3">
              <img src={authorImg.src} alt="Author" class="w-9 h-9 rounded-full" />
              <div>
                <p class="text-sm font-medium">Sarah Johnson</p>
                <p class="text-xs text-gray-400">CEO, TechCorp Solutions</p>
              </div>
            </div>
            <a
              href="#"
              class="text-orange-500 hover:text-orange-600 font-medium text-sm flex self-end gap-1"
            >
              Learn More â†’
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
