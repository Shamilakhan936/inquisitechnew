---
import locationIcon from "../../public/Images/location-icon.png";
import phoneIcon from "../../public/Images/phone-ic.png";

const contactInfo = [
  { icon: locationIcon, title: "Our Location", details: "328 Harborview Drive, Suite 410, Seaview Heights, Oregon 97401, USA" },
  { icon: phoneIcon, title: "Phone (Landline)", details: "+9212-678-0987" },
];
---
---

<section>
    <div class="max-w-[1400px] w-full mx-auto flex flex-col md:flex-row gap-[114px] mb-[120px]">
        <!-- Left Side - Contact Info -->
        <div class="flex-1">
            <h2 class="text-[48px] font-bold mb-[8px]">Get In Touch</h2>
            <p class="text-black mb-[40px] text-[18px]">
                We provide end-to-end business intelligence solutions to help
                you harness the full potential of your data.
            </p>
            <p class="font-medium mb-6 text-[18px]">
                Feel free to get in touch with us via email or phone
            </p>
            <div class="h-0.5 w-32 bg-orange-400 mb-8"></div>

            {
                contactInfo.map((item) => (
                    <div class="flex items-start gap-4 mb-6">
                        <img
                            src={item.icon.src}
                            alt={item.title}
                            class="w-[35px] h-[35px] "
                        />
                        <div>
                            <h3 class="font-medium text-[24px] ">{item.title}</h3>
                            <p class="text-black text-[18px] font-inter">{item.details}</p>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Right Side - Contact Form -->
        <div class="flex-1 bg-orange-50 max-w-[524px] w-full rounded-xl px-[40px] py-[60px]">
            <h3 class="text-[24px] font-inter font-semibold text-center mb-6">Get Started</h3>
            <form action="#" method="POST" class="space-y-4">
                <div>
                    <label for="name" class="sr-only">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter your name"
                        class="w-full border bg-[#FFFFFF] rounded-[10px] border-none px-[16px] py-[10px] focus:outline-none focus:border-orange-400"
                    />
                </div>

                <div>
                    <label for="email" class="sr-only">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Enter your email address"
                        class="w-full border bg-[#FFFFFF] rounded-[10px] border-none px-[16px] py-[10px]  focus:outline-none focus:border-orange-400"
                    />
                </div>

                <div>
                    <label for="message" class="sr-only">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        placeholder="Enter your message"
                        class="w-full border border-none bg-[#FFFFFF] resize-none rounded-md px-4 py-2 focus:outline-none focus:border-orange-400"
                    ></textarea>
                </div>

                <button
                    type="submit"
                    class="w-full bg-orange-400 text-white py-2 rounded-md hover:bg-orange-500 transition"
                >
                    Submit
                </button>
            </form>
        </div>
    </div>
</section>
