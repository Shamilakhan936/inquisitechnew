---
import "../styles/global.css";
import logo from "../../public/Images/mainlogo.png";
---

<div
	class="bg-[#252525] shadow-md sm:px-[73px] sm:pt-[30px] sm:pb-[20px] max-sm:p-3"
>
	<nav class="flex items-center justify-between max-w-[1328px] mx-auto">
		<div class="flex items-center gap-2">
			<img src={logo.src} alt="Logo" class="h-[76.09px] w-auto" />
		</div>

		<ul class="hidden md:flex gap-6 text-sm font-inter">
			<li>
				<a href="/" class="text-[#FFFFFF] hover:text-[#FF9929]">Home</a>
			</li>
			<li>
				<a href="/about" class="text-[#FFFFFF] hover:text-[#FF9929]"
					>About Us</a>
			</li>
			<li class="relative group">
				<a
					href="/services"
					class="flex items-center gap-1 text-[#FFFFFF] hover:text-[#FF9929]"
				>
					Services
					<svg
						class="w-4 h-4"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M19 9l-7 7-7-7"></path>
					</svg>
				</a>

				<ul
					class="absolute hidden group-hover:block bg-white shadow-md z-20 w-40 text-sm"
				>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 1</a
						>
					</li>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 2</a
						>
					</li>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 3</a
						>
					</li>
				</ul>
			</li>
			<li>
				<a href="#" class="text-[#FFFFFF] hover:text-[#FF9929]"
					>Contact Page</a>
			</li>
			<li>
				<a href="/careers" class="text-[#FFFFFF] hover:text-[#FF9929]"
					>Careers</a>
			</li>
			<li>
				<a href="#" class="text-[#FFFFFF] hover:text-[#FF9929]"
					>Testimonials</a>
			</li>
			<li>
				<a href="/blog" class="text-[#FFFFFF] hover:text-[#FF9929]"
					>Blog</a>
			</li>
		</ul>

		<a
			href="/contact"
			class="hidden md:inline-block bg-[#FF9929] text-white px-4 py-2 rounded-md hover:bg-orange-600 transition"
		>
			Get Started
		</a>

		<button
			class="md:hidden flex flex-col gap-1"
			onclick="document.querySelector('#mobileMenu').classList.toggle('hidden')"
		>
			<span class="block w-6 h-0.5 bg-black"></span>
			<span class="block w-6 h-0.5 bg-black"></span>
			<span class="block w-6 h-0.5 bg-black"></span>
		</button>
	</nav>

	<div
		id="mobileMenu"
		class="hidden md:hidden bg-white shadow-md px-6 py-4 space-y-3 font-inter text-sm"
	>
		<a href="/" class="block">Home</a>
		<a href="/about" class="block">About Us</a>
		<a href="#" class="block">Services</a>
		<a href="#" class="block">Contact Page</a>
		<a href="/careers" class="block">Careers</a>
		<a href="#" class="block">Testimonials</a>
		<a href="/blog" class="block">Blog</a>
		<a
			href="#"
			class="block bg-[#FF9929] text-white px-4 py-2 rounded-md text-center"
			>Get Started</a
		>
	</div>
</div>
