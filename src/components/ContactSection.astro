---
// src/components/ContactSection.astro
import contactus from "../../public/Images/contact-us.png";
---

<section class="my-[120px] bg-white">
    <div class="container-xl grid grid-cols-1 lg:grid-cols-2 gap-10 px-6">
        <!-- Left Column: Form -->
        <div class="bg-white border rounded-xl shadow-sm p-10">
            <h3 class="text-xl font-semibold mb-2">Get Started Today</h3>
            <p class="text-[16px] font-inter text-[#4B5563] mb-6">
                Fill out the form below and our team will get back to you within
                24 hours to discuss your business intelligence needs.
            </p>
            <form class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label
                            for="fullName"
                            class="block text-sm font-semibold text-black mb-4"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="fullName"
                            placeholder="Enter your full name"
                            class="w-full border rounded-lg px-4 py-3 text-sm outline-none"
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-sm font-semibold text-black mb-4"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            placeholder="Enter your email"
                            class="w-full border rounded-lg px-4 py-3 text-sm outline-none"
                        />
                    </div>

                    <div>
                        <label
                            for="company"
                            class="block text-sm font-semibold text-black mb-4"
                            >Company Name</label
                        >
                        <input
                            type="text"
                            id="company"
                            placeholder="Enter your company name"
                            class="w-full border rounded-lg px-4 py-3 text-sm outline-none"
                        />
                    </div>

                    <div>
                        <label
                            for="phone"
                            class="block text-sm font-semibold text-black mb-4"
                            >Phone Number</label
                        >
                        <input
                            type="tel"
                            id="phone"
                            placeholder="Enter your phone number"
                            class="w-full border rounded-lg px-4 py-3 text-sm outline-none"
                        />
                    </div>

                    <div>
                        <label
                            for="service"
                            class="block text-sm font-semibold text-black mb-4"
                            >Service</label
                        >
                        <select
                            id="service"
                            class="w-full border rounded-lg px-4 py-3 text-sm text-gray-500 outline-none"
                        >
                            <option>Select a service</option>
                            <option>Data Analytics</option>
                            <option>Business Intelligence</option>
                            <option>Consulting</option>
                        </select>
                    </div>

                    <div>
                        <label
                            for="budget"
                            class="block text-sm font-semibold text-black mb-4"
                            >Budget Range</label
                        >
                        <select
                            id="budget"
                            class="w-full border rounded-lg px-4 py-3 text-sm text-gray-500 outline-none"
                        >
                            <option>Select budget range</option>
                            <option>$5k - $10k</option>
                            <option>$10k - $50k</option>
                            <option>$50k+</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label
                        for="description"
                        class="block text-sm font-semibold text-black mb-4"
                        >Project Description</label
                    >
                    <textarea
                        id="description"
                        rows="5"
                        maxlength="500"
                        placeholder="Write a description"
                        class="w-full border rounded-lg px-4 py-3 text-sm outline-none resize-none"
                    ></textarea>
                    <p class="text-xs text-black text-right">
                        0/500 Characters
                    </p>
                </div>

                <button
                    type="submit"
                    class="w-full bg-[#FF9929] text-white py-3 rounded-lg font-medium"
                >
                    Send Message
                </button>
            </form>
        </div>

        <!-- Right Column: Contact Info -->
        <div class="flex flex-col justify-start">
            <h3 class="text-xl font-semibold mb-2">Get In Touch</h3>
            <p class="text-[16px] font-inter text-[#4B5563] mb-6">
                We have offices across major business hubs to serve you better.
                Reach out to the location nearest to you or contact our main
                office.
            </p>

            <div class="mb-6">
                <img
                    src={contactus.src}
                    alt="Business consultant"
                    class="rounded-lg shadow-md w-[548px] object-cover"
                />
            </div>

            <!-- Social Icons -->
            <div class="flex items-center gap-4 text-gray-700">
                <span class="text-sm font-medium">Follow Us</span>

                <!-- LinkedIn -->
                <a
                    href="#"
                    class="text-blue-700 transition"
                    aria-label="LinkedIn"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        class="w-6 h-6"
                    >
                        <path
                            d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.5 8.5h4V24h-4V8.5zm7.5 0h3.8v2.1h.1c.5-1 1.8-2.1 3.8-2.1 4.1 0 4.9 2.7 4.9 6.2V24h-4v-8.3c0-2 0-4.6-2.8-4.6-2.8 0-3.2 2.2-3.2 4.5V24h-4V8.5z"
                        ></path>
                    </svg>
                </a>

                <!-- Twitter -->
                <a
                    href="#"
                    class="text-blue-500 "
                    aria-label="Twitter"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        class="w-6 h-6"
                    >
                        <path
                            d="M23 2.999a10.46 10.46 0 01-2.828.775 4.936 4.936 0 002.165-2.723c-.951.564-2.005.974-3.127 1.195A4.916 4.916 0 0016.616 1c-2.717 0-4.924 2.206-4.924 4.923 0 .39.045.77.128 1.134C7.728 6.853 4.1 4.922 1.671 1.902a4.822 4.822 0 00-.666 2.475c0 1.708.869 3.216 2.188 4.099a4.903 4.903 0 01-2.229-.616v.062c0 2.385 1.694 4.374 3.946 4.827a4.996 4.996 0 01-2.224.084c.63 1.963 2.445 3.393 4.6 3.435A9.868 9.868 0 010 19.54 13.94 13.94 0 007.548 22c9.142 0 14.307-7.721 14.307-14.414 0-.22-.004-.437-.014-.653A10.17 10.17 0 0023 2.999z"
                        ></path>
                    </svg>
                </a>

                <!-- Facebook -->
                <a
                    href="#"
                    class="text-blue-600 "
                    aria-label="Facebook"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        class="w-6 h-6"
                    >
                        <path
                            d="M22.675 0h-21.35C.6 0 0 .6 0 1.325v21.351C0 23.4.6 24 1.325 24h11.494v-9.294H9.691V11.01h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.464.099 2.797.143v3.24h-1.922c-1.508 0-1.8.716-1.8 1.765v2.307h3.6l-.468 3.696h-3.132V24h6.144C23.4 24 24 23.4 24 22.676V1.325C24 .6 23.4 0 22.675 0z"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
