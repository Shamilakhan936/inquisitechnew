---
import homeIcon from "../assets/Images/home.png";
import linkedinIcon from "../assets/Images/linkedn.png";
import twitterIcon from "../assets/Images/twitter.png";
import facebookIcon from "../assets/Images/facebook.png";
import phoneIcon from "../assets/Images/phone.png";
import emailIcon from "../assets/Images/email.png";
import locationIcon from "../assets/Images/location.png";
---

<footer class="bg-[#1E1E1E] text-white px-6 md:px-20 py-10 text-sm font-light">
  <div class="max-w-screen-xl mx-auto flex flex-col md:flex-row flex-wrap justify-between gap-10">
    
    <div class="flex flex-col items-start max-w-full md:max-w-[365px] shrink-0">
      <img src={homeIcon.src} alt="Inquisitech logo" class="mb-6 h-8 w-auto" />
      <p class="mb-5 leading-relaxed text-gray-300">
        Transform Your Business With Intelligent Data Solutions. We Help Organizations Unlock The Power Of Their Data Through Advanced Analytics And Business Intelligence.
      </p>

      <div class="flex gap-5 mt-4 text-xl">
        <a href="#" target="_blank" rel="noopener noreferrer">
          <img src={linkedinIcon.src} alt="LinkedIn" class="h-5 w-5" />
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer">
          <img src={twitterIcon.src} alt="Twitter" class="h-5 w-5" />
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer">
          <img src={facebookIcon.src} alt="Facebook" class="h-5 w-5" />
        </a>
      </div>
    </div>

    <div class="min-w-[150px]">
      <h4 class="font-semibold mb-6 font-poppins">Services</h4>
      <ul class="space-y-4 text-gray-300">
        <li>Data Warehousing</li>
        <li>BI Consulting</li>
        <li>Dashboards &amp; Visualization</li>
        <li>Data Analytics</li>
        <li>Machine Learning</li>
      </ul>
    </div>

    <div class="min-w-[150px]">
      <h4 class="font-semibold mb-6">Company</h4>
      <ul class="space-y-4 text-gray-300">
        <li>About Us</li>
        <li>Careers</li>
        <li>Testimonials</li>
        <li>Blog</li>
        <li>Machine Learning</li>
      </ul>
    </div>

    <div class="min-w-[200px]">
      <h4 class="font-semibold mb-6">Contact</h4>
      <ul class="space-y-4 text-gray-300">
        <li class="flex items-start gap-3">
          <img src={phoneIcon.src} alt="Phone" class="h-5 w-5" />
          <span>+1 (555) 123-4567</span>
        </li>
        <li class="flex items-start gap-3">
          <img src={emailIcon.src} alt="Email" class="h-5 w-5" />
          <span>Hello@Biinsights.Com</span>
        </li>
        <li class="flex items-start gap-3">
          <img src={locationIcon.src} alt="Location" class="h-5 w-5" />
          <span>
            328 Harborview Drive,<br />
            Suite 410, Seaview
          </span>
        </li>
      </ul>
    </div>
  </div>

  <hr class="border-gray-700 my-8" />

  <p class="text-center text-gray-400 text-sm">&copy; 2024 BI Insights. All Rights Reserved.</p>
</footer>
